<Window x:Class="IPOKurs.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите ID сотрудника" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="ID сотрудника:"/>
            <TextBox x:Name="EmployeeIdTextBox"/>
            <Button Content="OK" Margin="0,10,0,0" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
